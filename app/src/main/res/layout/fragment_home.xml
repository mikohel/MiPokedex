<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.home.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/etPokemonSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pokemon Search"
        android:maxLines="1"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Button
        android:id="@+id/btn_search"
        android:text="Let's Go!"

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPokemonSearch"
        app:layout_constraintRight_toRightOf="parent"
       />
    <Button
        android:id="@+id/guardarDatos"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="catch"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/mostrarID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_pokemon_info"
        android:text="Find em' All!"
        android:textSize="15sp"

        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_search"/>

    <TextView
        android:layout_width="0dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_pokemon_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/mostrarNombre"

        />

    <ImageView

        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/mostrarNombre"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        />

    <TextView

        android:id="@+id/hp"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="HP"
        app:layout_constraintRight_toLeftOf="@id/mostrarHp"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView

        android:id="@+id/mostrarHp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintLeft_toRightOf="@id/hp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:text=""
        />
    <TextView

        android:id="@+id/atack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="atack"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toLeftOf="@id/mostrarAtack"
        app:layout_constraintTop_toBottomOf="@id/mostrarHp"

        />
    <TextView

        android:id="@+id/mostrarAtack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/atack"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/mostrarHp"

        />
    <TextView

        android:id="@+id/defense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Defense"
        android:textAlignment="center"
        app:layout_constraintRight_toLeftOf="@id/mostrarDefense"
        app:layout_constraintTop_toBottomOf="@id/atack"

        app:layout_constraintLeft_toLeftOf="parent"

        />
    <TextView
        android:textAlignment="center"
        android:id="@+id/mostrarDefense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/mostrarAtack"
        app:layout_constraintLeft_toRightOf="@id/defense"
        app:layout_constraintRight_toRightOf="parent"

        />
    <TextView
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/speed"
        android:text="Speed"
        app:layout_constraintTop_toBottomOf="@id/defense"
        app:layout_constraintRight_toLeftOf="@id/mostrarSpeed"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <TextView

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/mostrarSpeed"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/mostrarDefense"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/speed"
        android:layout_marginRight="10dp"/>
    <TextView


        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/weight"
        android:textAlignment="center"
        android:text="Weight"
        app:layout_constraintTop_toBottomOf="@id/speed"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        app:layout_constraintRight_toLeftOf="@id/mostrarWeight"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/mostrarWeight"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/mostrarSpeed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/weight"
        android:layout_marginRight="10dp"/>

    <TextView

        android:id="@+id/mostrarTipo"
        android:layout_width="0dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/mostrarWeight"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mostrarTipo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/mostrarID"
        android:textAlignment="center"
        />



</androidx.constraintlayout.widget.ConstraintLayout>